        });

        $('.input').blur(function(){
            var value = $(this).val();
            var select = "[name='"+$(this).attr('name')+"']";
            $(select).val(value);

            if($(this).attr('name')=='waresId'){
                showData('WARES_INFO',{'waresId':$(this).val()});
            }
        });

        $('.input').keyup(function(){
            var value = $(this).val();
            var select = "[name='"+$(this).attr('name')+"']";
            $(select).val(value);
        });

        $("[jump-url]").click(function(e){
            window.open($(this).attr('jump-url'));
        });

        $(".batchBuy").click(function(e){
            var click = this;
            var prj = $(this).parent().parent();
            var post = getInput(prj);
            var code = 200;
            var num = 0;
            var doBuy = function(post){
                $.post('index.php?__=dev/test1&__VIEW__=json&waresId='+post.waresId,'',function(e){
                    post.uniqueOpId = e.r.uniqueOpId;
                    console.log(post);

                    $.post('/index.php?__=ordersnew/add&__VIEW__=json&cmd=buy',post,function(e){
                        console.log(e.code);
                        if(e.code == 200){
                            post.orderId = e.orderId;
                            $.post('/index.php?__=ordersnew/add&__VIEW__=json&cmd=buypaypwd',post,function(e){
                                console.log(e.code);
                                if(e.code==200){
                                    num++;
                                    $(".batchBuy-num").html(num);
                                }else{

                                }
                                doBuy(post);
                            });

                        }else{
                            alert(e.msg);
                        }
                    });


                });
            }
            doBuy(post);
        });
        var stop = false;
        $('.batchRecharge').click(function(){
            var click = this;
            var prj = $(this).parent().parent();
            var post = getInput(prj);
            var code = 200;
            var max = 10000;
