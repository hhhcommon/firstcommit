<script>
    $(function(){
        var pass = {};

        var warn = function(str){
            $('.modal').hide();
            alert(str);
        }

        var getInput = function(prj){
            var input = prj.find(".form .input");
            var post = {};
            input.each(function(){
                post[$(this).attr('name')] = $(this).val();
            });
            return post;
        }

        var getArg = function(post){
            var str = '';
            for(var i in post){
                str+=('&'+i+'='+post[i]);
            }
            return str;
        }



        var showData = function(cla,post){
            var form = $('.show.'+cla);
            $.post(form.attr('show-url'),post,function(e){
                if(e.code==200){
                    form.find('.showData').each(function(){
                        var key = $(this).attr('name');
                        if(form.attr('data-key')){
                            var data = e[form.attr('data-key')];
                        }else{
                            var data = e;
                        }
                        var value =  data[key];
                        var type = $(this).attr('data-type');
                        if(type){
                            switch (type){
                                case 'money':value/=100;break;
                            }
                        }
                        $(this).val(value);
                    });
                }
            });
        }

        showData('INFO');

        $('.click').click(function(){
            $('.modal').show();
            var click = this;
            var prj = $(this).parent().parent();
            var post = getInput(prj);

            var clickPost = function(){
                console.log(post);
                $.post($(click).attr('api'),post,function(e){
                    if(e.code==200){
                        console.log(e);
                        if($(click).attr('api_a')){
                            var key = $(click).attr('api_a_args');

                            if(key){
                                if(e[key]){
                                    for(var i in e[key]){
                                        post[i] = e[key][i];
                                    }
                                }
                            }else{
                                if(e){
                                    for(var i in e){
                                        post[i] = e[i];
                                    }
                                }
                            }

                            $.post($(click).attr('api_a'),post ,function(data){
                                console.log(data);
                                if(data.code!=200){
                                    warn(data.msg);
                                }
                            });
                        }
                        warn(e.code);
                        if($(click).attr('refresh')){
                            location.reload();
                        }
                    }else{
                        warn(e.msg);
                    }
                });
            }

