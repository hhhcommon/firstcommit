                $.post('/index.php?__=user/recharge&__VIEW__=json&cmd=recharge',post,function(e){
                    $.post('/index.php?__=user/recharge&__VIEW__=json&cmd=rechargecode',post,function(e){
                        console.log(e.code);
                    });
                });
                if(num < max){
                    doBuy(post);
                }else{
                    alert('并发了'+num+'次');
                }
            }
            doBuy(post);
        });

