.submit01 .btn{ width:3.9333rem; height:0.7222rem; margin:0 auto; text-align:center; display:block;background:#ef8b89; border-radius:3px; font-size:0.2667rem; color:#ffffff; border:1px solid #ef8b89; }
.submit01 .btn_highlight{ width:3.9333rem; height:0.7222rem; margin:0 auto; text-align:center; display:block;background:#e53d3a; border-radius:3px; font-size:0.2667rem; color:#ffffff; border:1px solid #e53d3a; }

.explain{ width:100%; margin:0 auto; text-align:center; font-size:0.2333rem; color:#7e7e7e;}

.xianjin,.next_zhanghu{ width:100%; margin:0 auto; font-size:0.25rem; color:#7e7e7e; text-align:center; margin-bottom:0.15rem;}
.xianjin .tel,.next_zhanghu .tel01,.next_zhanghu a{ color:#e53d3a;}

